<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="WeatherApp.CustomUI.FavouritePopup"
       HasShadow="True"
       IsVisible="False"
       Background="{DynamicResource PrimaryGradient}"
       AbsoluteLayout.LayoutFlags="All"
       AbsoluteLayout.LayoutBounds="1,1,0.5,0.5"
       CornerRadius="15">
    <StackLayout x:Name="OptionsStack">
        <Label Text="FAVOURITES" HorizontalTextAlignment="Center" FontSize="20" TextColor="{DynamicResource PrimaryColor}" FontAttributes="Bold"/>
        <Button x:Name="F1" Text="&lt;EMPTY>"/>
        <Button x:Name="F2" Text="&lt;EMPTY>"/>
        <Button x:Name="F3" Text="&lt;EMPTY>"/>
        <Label x:Name="moreLabel" Text="{Binding MoreText}" IsVisible="{Binding Visibility}" HorizontalTextAlignment="Center" FontSize="10"/>
    </StackLayout>
</Frame>